/** Declaration des structures  **/

#ifndef _BATTLE_H
#define _BATTLE_H

typedef struct		s_creature
{
  char			*name;
  int			lvl;
  int			pv;
  int			pvmax;
  int			pm;
  int			pmmax;
}
typedef struct		s_gamer
{
  char			*name;
  struct s_creature	*team;
}
#endif
